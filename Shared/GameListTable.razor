
<div class="table-responsive">
    <table class="table table-striped">
        <thead class="thead-light">
            <tr>
                <th>Name</th>
                <th>Genre</th>
                <th>Release Date</th>
                <th><input type="checkbox" @onchange="(() => displayButtons = !displayButtons)" /></th>
            </tr>
        </thead>
        <tbody>

            @if (Games == null)
            {
                <tr>LOADING DATA...</tr>
            }
            else if (Games.Count == 0)
            {
                <tr>NO ITEMS IN ARRAY</tr>
            }
            else
            {
                @foreach (Game game in Games)
                {
                    <IndividualGame Game="game" IsTable="true" DisplayButtons="displayButtons"/>
                } 
            }
        </tbody>
    </table>
</div>

@code {
    [Parameter] public List<Game> Games { get; set; }

    bool displayButtons = false;
}
